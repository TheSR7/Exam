#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node *next;
};

class LinkedList {
private:
    Node *first;

public:
    LinkedList() { first = NULL; }
    LinkedList(int A[], int n);
    ~LinkedList();

    void Display();
    void Insert(int index, int x);
    int Delete(int index);
    Node* Search(int key);               // ✅ Wrapper declaration
    Node* Search(Node* p, int key);      // ✅ Actual logic declaration
};

LinkedList::LinkedList(int A[], int n) {
    Node *last, *t;
    first = new Node;
    first->data = A[0];
    first->next = NULL;
    last = first;

    for (int i = 1; i < n; i++) {
        t = new Node;
        t->data = A[i];
        t->next = NULL;
        last->next = t;
        last = t;
    }
}

LinkedList::~LinkedList() {
    Node *p = first;
    while (first) {
        first = first->next;
        delete p;
        p = first;
    }
}

void LinkedList::Insert(int index, int x) {
    Node *p = first;
    if (index == 0) {
        Node *t = new Node;
        t->data = x;
        t->next = first;
        first = t;
    } else {
        Node *t = new Node;
        t->data = x;
        for (int i = 0; i < index - 1 && p; i++)
            p = p->next;
        if (p) {
            t->next = p->next;
            p->next = t;
        }
    }
}

int LinkedList::Delete(int index) {
    Node *p = first, *q = NULL;
    int x = -1;

    if (index < 1) {
        cout << "Error: Invalid index" << endl;
        return -1;
    }

    if (index == 1) {
        first = first->next;
        x = p->data;
        delete p;
    } else {
        for (int i = 0; i < index - 1 && p; i++) {
            q = p;
            p = p->next;
        }
        if (p) {
            q->next = p->next;
            x = p->data;
            delete p;
        }
    }

    return x;
}

Node* LinkedList::Search(int key) {
    return Search(first, key);  // ✅ Calls the actual logic
}

Node* LinkedList::Search(Node* p, int key) {
    while (p != NULL) {
        if (key == p->data) {
            cout << "Found at node with value: " << p->data << endl;
            return p;
        }
        p = p->next;
    }
    cout << "Element not found" << endl;
    return NULL;
}

void LinkedList::Display() {
    Node *p = first;
    while (p) {
        cout << p->data << " ";
        p = p->next;
    }
    cout << endl;
}

int main() {
    int A[] = {1, 2, 3, 4, 5};
    LinkedList l(A, 5);

    l.Insert(0, 20);
    l.Display();

    l.Insert(3, 10);
    l.Display();

    l.Delete(1);
    l.Display();

    l.Delete(3);
    l.Display();

    l.Search(10);  // ✅ Works now
    l.Display();

    return 0;
}



output
20 1 2 3 4 5 
20 1 2 10 3 4 5 
1 2 10 3 4 5 
1 2 3 4 5 
Element not found
1 2 3 4 5 
