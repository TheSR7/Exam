#include <iostream>
using namespace std;

class Queue {
private:
    int front;
    int rear;
    int size;
    int *Q;

public:
    Queue(int sz) {
        size = sz;
        front = rear = -1;
        Q = new int[size];
    }

    ~Queue() {
        delete[] Q;
    }

    void Enqueue(int x);
    int Dequeue();
    void Display();
    bool isEmpty();
    bool isFull();
};

void Queue::Enqueue(int x) {
    if (rear == size - 1)
        cout << "Queue Overflow" << endl;
    else {
        rear++;
        Q[rear] = x;
    }
}

int Queue::Dequeue() {
    if (front == rear) {
        cout << "Queue Underflow" << endl;
        return -1;
    } else {
        front++;
        return Q[front];
    }
}

void Queue::Display() {
    for (int i = front + 1; i <= rear; i++)
        cout << Q[i] << " ";
    cout << endl;
}

bool Queue::isEmpty() {
    return front == rear;
}

bool Queue::isFull() {
    return rear == size - 1;
}

int main() {
    Queue q(5);

    q.Enqueue(10);
    q.Enqueue(20);
    q.Enqueue(30);
    q.Display();

    q.Dequeue();
    q.Display();

    q.Enqueue(40);
    q.Enqueue(50);
    q.Display();

    return 0;
}
output
10 20 30 
20 30 
20 30 40 50 


=== Code Execution Successful ===
