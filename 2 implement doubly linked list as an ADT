#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node *prev;
    Node *next;
};

class DoublyLinkedList {
private:
    Node *head;
    Node *tail;

public:
    DoublyLinkedList() { head = tail = NULL; }
    DoublyLinkedList(int A[], int n);
    ~DoublyLinkedList();

    void Display();
    void Insert(int index, int x);
    int Delete(int index);
};

DoublyLinkedList::DoublyLinkedList(int A[], int n) {
    Node *last, *t;
    head = new Node;
    head->data = A[0];
    head->prev = NULL;
    head->next = NULL;
    last = head;
    tail = head;

    for (int i = 1; i < n; i++) {
        t = new Node;
        t->data = A[i];
        t->prev = last;
        t->next = NULL;
        last->next = t;
        last = t;
    }
    tail = last;
}

DoublyLinkedList::~DoublyLinkedList() {
    Node *p = head;
    while (head) {
        head = head->next;
        delete p;
        p = head;
    }
}

void DoublyLinkedList::Insert(int index, int x) {
    Node *p = head;
    Node *t = new Node;
    t->data = x;
    t->prev = t->next = NULL;

    if (index == 0) {
        t->next = head;
        if (head)
            head->prev = t;
        else
            tail = t;
        head = t;
    } else {
        for (int i = 0; i < index - 1 && p; i++)
            p = p->next;
        if (p) {
            t->next = p->next;
            t->prev = p;
            if (p->next)
                p->next->prev = t;
            else
                tail = t;
            p->next = t;
        }
    }
}

int DoublyLinkedList::Delete(int index) {
    Node *p = head;
    int x = -1;

    if (index < 0) {
        cout << "Error: Invalid index" << endl;
        return -1;
    }

    if (index == 0 && head) {
        x = head->data;
        p = head;
        head = head->next;
        if (head)
            head->prev = NULL;
        else
            tail = NULL;
        delete p;
    } else {
        for (int i = 0; i < index && p; i++)
            p = p->next;
        if (p) {
            x = p->data;
            if (p->prev)
                p->prev->next = p->next;
            if (p->next)
                p->next->prev = p->prev;
            if (p == tail)
                tail = p->prev;
            delete p;
        }
    }

    return x;
}

void DoublyLinkedList::Display() {
    Node *p = head;
    while (p) {
        cout << p->data << " ";
        p = p->next;
    }
    cout << endl;
}

int main() {
    int A[] = {1, 2, 3, 4, 5};
    DoublyLinkedList dl(A, 5);

    dl.Insert(0, 20);
    dl.Display();

    dl.Insert(3, 10);
    dl.Display();

    dl.Delete(0);
    dl.Display();

    dl.Delete(3);
    dl.Display();

    return 0;
}

output
20 1 2 3 4 5 
20 1 2 10 3 4 5 
1 2 10 3 4 5 
1 2 10 4 5 
