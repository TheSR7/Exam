#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
    FILE *fp;
    char line[256];

    fp = fopen("/proc/meminfo", "r");
    if (fp == NULL) {
        perror("Error opening /proc/meminfo");
        return 1;
    }

    printf("Linux Kernel Memory Information:\n\n");

    while (fgets(line, sizeof(line), fp)) {
        // Print only key memory fields
        if (strncmp(line, "MemTotal", 8) == 0 ||
            strncmp(line, "MemFree", 7) == 0 ||
            strncmp(line, "MemAvailable", 12) == 0 ||
            strncmp(line, "Buffers", 7) == 0 ||
            strncmp(line, "Cached", 6) == 0 ||
            strncmp(line, "SwapTotal", 9) == 0 ||
            strncmp(line, "SwapFree", 8) == 0) {
            printf("%s", line);
        }
    }

    fclose(fp);
    return 0;
}
